		</layout>
	</appender>

	<appender name="out-package-unicorn" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.home}/webapps/unicorn/WEB-INF/logs/all.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
	</appender>


	<logger name="org.w3c.unicorn.Framework">
		<level value="trace"/>
		<appender-ref ref="out-level-error" />
		<appender-ref ref="out-level-warning" />
		<appender-ref ref="out-level-info" />
		<appender-ref ref="out-level-debug" />
		<appender-ref ref="out-level-trace" />
