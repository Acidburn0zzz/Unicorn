			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-output" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.home}/webapps/unicorn/WEB-INF/logs/package/output.log" />
