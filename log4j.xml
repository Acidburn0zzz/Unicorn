			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="warn" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<appender name="out-level-info" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.home}/webapps/unicorn/WEB-INF/logs/level/info.log" />
