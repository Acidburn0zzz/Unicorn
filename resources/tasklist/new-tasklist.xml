<?xml version="1.0" ?>
<tasklist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.w3.org/unicorn/tasklist ../schemas/tasklist-schema.xsd"
 xmlns="http://www.w3.org/unicorn/tasklist">
	
	<task id="conformance">
		
		<routine ref="conformance">
			<exec id="appc-check" value="appc-checker" type="observation"/>
			<exec id="markup_and_css" value="markup_and_css" type="subtask"/>
		</routine>
		
		<outputseq>
			<outputgroup id="1">
				<tasksort>appc-checker</tasksort>
			</outputgroup>
		</outputseq>

		
	</task>
	
	
	
	<task id="markup_and_css">

		<conds>
		
			<cond id="xpath" result="passed" observer="markup-validator" type="xpath">
				<value>//result</value>
			</cond>
		
			<cond id="mathml" result="passed"  type="mimetype">
				<value>application/mathml+xml</value>
			</cond>
			<cond id="smil" result="passed"  type="mimetype">
				<value>application/smil+xml</value>
			</cond>
			
			<cond id="html" result="passed" type="mimetype">
				<value>text/html</value>
			</cond>
			<cond id="css" result="passed" type="mimetype">
				<value>text/css</value>
			</cond>
			<cond id="svg" result="passed" type="mimetype">
				<value>image/svg+xml</value>
			</cond>
			<cond id="xhtml" result="passed" type="mimetype">
				<value>application/xhtml+xml</value>
			</cond>
		</conds>
		
		<routine ref="markup_and_css">
			<exec id="markup" value="markup-validator" type="observation" >
			</exec>

			<if test ="xpath">
				<then>
					<exec id="css" value="css-validator" type="observation" >
					</exec>
				</then>
			</if>

		</routine>
		
		<outputseq>
			<outputgroup id="2">
				<tasksort>css-validator</tasksort>
				<tasksort>markup-validator</tasksort>
			</outputgroup>
		</outputseq>
		
		
	</task>
	
	

	
	
</tasklist>
