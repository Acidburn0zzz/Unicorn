<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<!-- APPENDER STD -->

	<appender name="out-all-std" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p (%F:%L) : %m%n" />
		</layout>
	</appender>

	<!-- TEXT APPENDER -->

	<!-- TEXT APPENDER - LEVEL APPENDER -->

	<appender name="out-level-error-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/level/error.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="error" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<appender name="out-level-warning-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/level/warning.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="warn" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="warn" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<appender name="out-level-info-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/level/info.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="info" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<appender name="out-level-debug-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/level/debug.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="debug" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<appender name="out-level-trace-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/level/trace.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="trace" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<!-- TEXT APPENDER - END OF LEVEL APPENDER -->

	<!-- TEXT APPENDER - PACKAGE APPENDER -->

	<appender name="out-package-contract-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/contract.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-index-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/index.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-input-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/input.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-output-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/output.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-request-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/request.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-servlet-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/servlet.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-tasklist-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/tasklist.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-util-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/package/util.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %m%n" />
		</layout>
	</appender>

	<appender name="out-package-unicorn-text" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/Jigsaw/Jigsaw/WWW/unicorn/logs/all.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
	</appender>

	<!-- TEXT APPENDER - END OF PACKAGE APPENDER -->

	<!-- END OF TEXT APPENDER -->

	<!-- BEGIN OF LOGGER -->

	<logger name="org.w3c.unicorn.Framework">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.contract">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-contract-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.index">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-index-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.input">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-input-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.output">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-output-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.request">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-request-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.servlet">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-servlet-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.tasklist">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-tasklist-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>

	<logger name="org.w3c.unicorn.util">
		<level value="trace"/>
		<appender-ref ref="out-level-error-text" />
		<appender-ref ref="out-level-warning-text" />
		<appender-ref ref="out-level-info-text" />
		<appender-ref ref="out-level-debug-text" />
		<appender-ref ref="out-level-trace-text" />
		<appender-ref ref="out-package-util-text" />
		<appender-ref ref="out-package-unicorn-text" />
	</logger>


	<root>
		<level value="warn"/>
	</root>

</log4j:configuration>
