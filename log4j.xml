<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="out-all-std" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p (%F:%L) : %m%n" />
		</layout>
	</appender>


	<appender name="out-level-error" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.home}/webapps/unicorn/WEB-INF/logs/level/error.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<param name="Threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %-5p (%F:%L) %c{1} : %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelMatchFilter">
			<param name="LevelToMatch" value="error" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
		<filter class="org.apache.log4j.varia.DenyAllFilter" />
	</appender>

	<appender name="out-level-warning" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.home}/webapps/unicorn/WEB-INF/logs/level/warning.log" />
