	<logger name="org.w3c.unicorn.tasklist">
		<level value="trace"/>
		<appender-ref ref="out-level-error" />
		<appender-ref ref="out-level-warning" />
		<appender-ref ref="out-level-info" />
		<appender-ref ref="out-level-debug" />
		<appender-ref ref="out-level-trace" />
